{
    "source": "./src",
    "destination": "docs",
    "excludes": [ "^app", "^cli" ],

    "plugins": [
        {
            "name": "esdoc-babel-7-plugin",
            "option": {
                "plugins": [
                  ["@babel/plugin-proposal-class-properties", { "loose": true }],
                  "@babel/plugin-proposal-do-expressions",
                  "@babel/plugin-proposal-function-bind",
                  "@babel/plugin-proposal-export-namespace-from",
                  "@babel/plugin-proposal-export-default",
                  "@babel/plugin-proposal-object-rest-spread",
                  "@babel/plugin-transform-flow-strip-types",
                  "@babel/plugin-proposal-optional-chaining",
                  ["babel-plugin-root-import", {
                      "rootPathPrefix": "@",
                      "rootPathSuffix": "node_modules/llir/lib/"
                  }]
                ]
            }
        },
        {
            "name": "esdoc-standard-plugin",
            "option": {
                "coverage": {
                    "enable": true
                },
                "accessor": {
                    "access": ["public", "protected", "readonly"],
                    "autoPrivate": true
                },
                "brand": {
                    "title": "VSL",
                    "description": "Versatile Scripting Language.",
                    "repository": "https://github.com/vsl-lang/VSL",
                    "site": "https://staging.vihan.org/VSL"
                },
                "test": {
                    "source": "./test",
                    "includes": [ "\\.js$" ]
                }
            }
        },
        {
            "name": "esdoc-inject-style-plugin",
            "option": {
                "enable": true,
                "styles": [ "misc/doc.css" ]
            }
        },
        {
            "name": "esdoc-inject-script-plugin",
            "option": {
                "enable": true,
                "scripts": [ "misc/doc.js" ]
            }
        },
        {
            "name": "esdoc-importpath-plugin",
                "option": {
                "replaces": [
                    { "from": "^src", "to": "lib" },
                    { "from": "\\.js$", "to": "" }
                ]
            }
        }
    ]
}
